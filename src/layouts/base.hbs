<!doctype html>
<html lang="en">
{{#block "head"}}
  <head>
    {{#block "meta"}}
    {{> base/meta}}
    {{/block}}

    {{#block "title"}}
    <title>{{title}}</title>
    {{/block}}

    <link rel="shortcut icon" href="../favicon.ico" type="image/png">
    {{#block "styles"}}
      {{#each stylesheets}}
      <link rel="stylesheet" href="{{this}}" />
      {{/each}}
    {{/block}}
  </head>
{{/block}}

{{#block "body"}}
  <body>
    <div class="{{background}}">
    {{#block "header"}}
    {{/block}}

    {{#block "main"}}
    {{/block}}

    {{#block "footer"}}
    {{/block}}
    </div>
  </body>
{{/block}}
</html>
