---
title: Heylynx - Sign Up
bodyclass: body__sign
stylesheets:
  - ./sign.css
  - ../styles/index.css
---

{{#extend "base"}}
  {{#content "header"}}
    {{> header}}
  {{/content}}

  {{#content "main"}}
    <main class="app">
      <div class="login__wrapper">
        <div class="login login_registation">
          <div class="login__inputs">
            {{> title caption="Registration" classes="login__title"}}
            {{> input caption="Email" name="email" type="email"}}
            {{> input caption="Login" name="login" type="text"}}
            {{> input caption="First name" name="first_name" type="text"}}
            {{> input caption="Second name" name="second_name" type="text"}}
            {{> input caption="Phone" name="phone" type="tel" placeholder="123-45-678" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" }}
            {{> input caption="Password" name="password" type="password"}}
            {{> input caption="Password" name="password" type="password"}}
          </div>
          
          <div class="login__buttons">
            <a href="../error/error404.hbs">{{> button classes="login__button login__button_active" caption="Create account"}}</a>
            <a href="signin.hbs">{{> button classes="login__button" caption="Sign in"}}</a>
          </div>
        </div>
      </div>
    </main>
  {{/content}}
{{/extend}}