---
title: Heylynx - Profile
bodyclass: body__sign
stylesheets:
  - ./profile.css
  - ../styles/index.css
---

{{#extend "base"}}
  {{#content "main"}}
    <main class="app">

      <div class="back__wrapper">
        <a href="../messenger/messenger.hbs" class="back__button messenger__icons" >
          {{> back}}
        </a>
      </div>
       
      <div class="profile__wrapper">
        <div class="profile">
          <div class="profile__inputs">
            {{> profile-photo name="avatar" imglink="../../../static/images/avatars/leo.png"}}
            {{> title caption="Leonardo Di Caprio" classes="profile__title"}}
            {{> profile-input data="Leonardo" caption="First name" name="first_name" type="text"}}
            {{> profile-input data="Di Caprio" caption="Second name" name="second_name" type="text"}}
            {{> profile-input data="Leo" caption="Display name" name="display_name" type="text"}}
            {{> profile-input data="leodi" caption="Login" name="login" type="text"}}
            {{> profile-input data="leo@di.app" caption="Email" name="email" type="email"}}
            {{> profile-input data="+1 234-555-6789" caption="Phone" name="phone" type="tel" placeholder="123-45-678" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" }}     
          </div>

          <div class="profile__buttons">
            <a href="profile-edit.hbs">{{> button classes="profile__button" caption="Edit information"}}</a>
            <a href="profile-edit-pass.hbs">{{> button classes="profile__button" caption="Change password"}}</a>
            <a href="../sign/signin.hbs">{{> button classes="profile__button profile__button_attention" caption="Log out"}}</a>
          </div>
        </div>
      </div>
      
    </main>
  {{/content}}
{{/extend}}