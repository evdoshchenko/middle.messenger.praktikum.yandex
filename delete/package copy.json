{
  "name": "middle.messenger.praktikum.yandex",
  "version": "0.3.1",
  "description": "messenger",
  "scripts": {
    "dev": "parcel src/index.html --no-cache",
    "build": "parcel build src/index.html --no-cache",
    "start": "npm run build && node ./src/server.js",
    "stylelint": "npx stylelint '**/*.scss' --custom-syntax postcss-scss",
    "eslint": "node_modules/.bin/eslint .",
    "lint": "npm run eslint && npm run stylelint",
    "test": "jest"
  },
  "alias": {
    "src": "./src",
    "store": "./src/store",
    "components": "./src/components",
    "core": "./src/core",
    "helpers": "./src/helpers",
    "pages": "./src/pages",
    "images": "./src/images",
    "icons": "./src/icons",
    "data": "./src/data",
    "utils": "./src/utils",
    "api": "./src/api",
    "services": "./src/services"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evdoshchenko/middle.messenger.praktikum.yandex"
  },
  "author": "Danil Evdoshchenko",
  "license": "ISC",
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars": "1.0.9",
    "@babel/core": "7.19.6",
    "@babel/preset-env": "7.19.4",
    "@babel/preset-typescript": "7.18.6",
    "@parcel/transformer-sass": "2.7.0",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/chai": "4.3.3",
    "@types/jest": "27.5.2",
    "@types/mocha": "10.0.0",
    "@types/node": "18.7.18",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "chai": "4.3.6",
    "dotenv": "^16.0.3",
    "eslint": "8.24.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "27.5.1",
    "mocha": "10.1.0",
    "msw": "^0.47.4",
    "parcel": "2.7.0",
    "postcss": "8.4.17",
    "postcss-scss": "4.0.5",
    "process": "0.11.10",
    "sass": "1.55.0",
    "stylelint": "14.13.0",
    "stylelint-scss": "4.3.0",
    "typescript": "4.8.3",
    "whatwg-fetch": "^3.6.2"
  },
  "dependencies": {
    "babel-core": "6.26.3",
    "express": "4.18.1",
    "handlebars": "4.7.7",
    "nanoid": "^3.3.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/src/tests/setupEnv.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ],
    "moduleNameMapper": {
      "^src(.*)$": "<rootDir>/src$1",
      "^store(.*)$": "<rootDir>/src/store$1",
      "^components(.*)$": "<rootDir>/src/components$1",
      "^core(.*)$": "<rootDir>/src/core$1",
      "^helpers(.*)$": "<rootDir>/src/helpers$1",
      "^pages(.*)$": "<rootDir>/src/pages$1",
      "^images(.*)$": "<rootDir>/src/images$1",
      "^icons(.*)$": "<rootDir>/src/icons$1",
      "^data(.*)$": "<rootDir>/src/data$1",
      "^utils(.*)$": "<rootDir>/src/utils$1",
      "^api(.*)$": "<rootDir>/src/api$1",
      "^services(.*)$": "<rootDir>/src/services$1",
      "\\.(scss)$": "identity-obj-proxy",
      "\\.(png)$": "identity-obj-proxy"
    }
  }
}
